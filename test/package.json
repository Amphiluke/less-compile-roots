{
  "name": "less-compile-root-test",
  "version": "1.0.0",
  "description": "Simple test package for the less-compile-roots module",
  "private": true,
  "type": "module",
  "main": "./test-api.cjs",
  "exports": "./test-api.mjs",
  "scripts": {
    "cleanup": "del 'less/*.css' 'less/*.css.map'",
    "test-cli": "del 'less/*.css' && less-compile-roots --pattern=less/*.less",
    "test-cli-config": "del 'less/*.css' && less-compile-roots --config=less-compile-config.cjs",
    "test-api-mjs": "del 'less/*.css' && node ./test-api.mjs",
    "test-api-cjs": "del 'less/*.css' && node ./test-api.cjs"
  },
  "author": "Amphiluke",
  "license": "MIT",
  "dependencies": {
    "del-cli": "^3.0.1",
    "less": "^4.1.1",
    "less-compile-roots": "file:../less-compile-roots-2.0.0.tgz"
  }
}
